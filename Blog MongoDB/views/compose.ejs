<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="articleTitle" class="form-label h5">Title</label>
        <input type="text" class="form-control" name="articleTitle" id="articleTitle">
    </div>
    <div class="mb-3">
        <label for="articleBody" class="form-label h5">Post</label>
        <textarea class="form-control" name="articleBody" id="articleBody" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Publish</button>
</form>

<%- include('partials/footer'); -%>