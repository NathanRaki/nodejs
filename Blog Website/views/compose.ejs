<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="postTitle" class="form-label h5">Title</label>
        <input type="text" class="form-control" name="postTitle" id="postTitle">
    </div>
    <div class="mb-3">
        <label for="postBody" class="form-label h5">Post</label>
        <textarea class="form-control" name="postBody" id="postBody" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Publish</button>
</form>

<%- include('partials/footer'); -%>